{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "outputs": []
    },
    "type-check": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "clean": {
      "cache": false
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**", "test-results/**", "playwright-report/**"]
    },
    "test:unit": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "test:integration": {
      "dependsOn": ["^build", "db:test:setup"],
      "outputs": ["coverage/**", "test-results/**"]
    },
    "test:e2e": {
      "dependsOn": ["^build"],
      "outputs": ["playwright-report/**", "test-results/**"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "test:security": {
      "outputs": ["security-reports/**"]
    },
    "test:performance": {
      "dependsOn": ["^build"],
      "outputs": ["performance-reports/**"]
    },
    "test:db": {
      "dependsOn": ["db:test:setup"],
      "outputs": ["coverage/**"]
    },
    "test:setup": {
      "cache": false
    },
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "db:migrate": {
      "cache": false
    },
    "db:studio": {
      "cache": false,
      "persistent": true
    },
    "db:test:setup": {
      "cache": false
    },
    "db:test:teardown": {
      "cache": false
    }
  }
}