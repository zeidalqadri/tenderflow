# TenderFlow API Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3001
HOST=0.0.0.0
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# JWT Configuration - CRITICAL SECURITY REQUIREMENT
# Generate a secure JWT secret (minimum 32 characters)
# Use: openssl rand -hex 32 or node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=REQUIRED-GENERATE-SECURE-32-CHAR-MIN-JWT-SECRET-KEY

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/tenderflow

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379

# S3 Configuration (for file storage)
S3_BUCKET=tenderflow-documents
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your-access-key-id
S3_SECRET_ACCESS_KEY=your-secret-access-key
S3_ENDPOINT=https://s3.amazonaws.com

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# File Upload Limits
MAX_FILE_SIZE=52428800  # 50MB
MAX_FILES=10

# OCR Configuration (for receipt parsing)
OCR_PROVIDER=tesseract
GOOGLE_CLOUD_KEY_FILE=path/to/service-account-key.json

# External API Keys
OPENAI_API_KEY=your-openai-api-key

# Monitoring and Analytics
SENTRY_DSN=your-sentry-dsn
ANALYTICS_TRACKING_ID=your-analytics-id

# Feature Flags
ENABLE_WEBHOOKS=true
ENABLE_NOTIFICATIONS=true
ENABLE_ANALYTICS=false
ENABLE_OCR=true

# Security
BCRYPT_ROUNDS=12
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
SESSION_SECRET=your-session-secret

# Development Tools
SWAGGER_UI_ENABLED=true
DEBUG_MODE=false