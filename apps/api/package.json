{
  "name": "@tenderflow/api",
  "version": "1.0.0",
  "description": "TenderFlow Fastify backend API",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:unit": "jest --testPathPattern='__tests__/unit'",
    "test:integration": "jest --testPathPattern='__tests__/integration'",
    "test:security": "jest --testPathPattern='__tests__/security'",
    "test:performance": "jest --testPathPattern='__tests__/performance'",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:db": "jest --testPathPattern='database'",
    "test:setup": "tsx src/__tests__/helpers/setup.ts",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:migrate:reset": "prisma migrate reset --force",
    "db:studio": "prisma studio",
    "db:seed": "tsx src/database/seed.ts",
    "db:test:setup": "tsx src/__tests__/helpers/db-setup.ts",
    "db:test:teardown": "tsx src/__tests__/helpers/db-teardown.ts",
    "db:init": "tsx scripts/db-setup.ts init --seed",
    "db:health": "tsx scripts/db-setup.ts health --verbose",
    "db:stats": "tsx scripts/db-setup.ts stats --tables --indexes",
    "db:backup": "tsx scripts/db-setup.ts backup --compress",
    "db:maintenance": "tsx scripts/db-setup.ts maintenance --vacuum --cleanup",
    "services:up": "docker-compose -f docker-compose.dev.yml up -d",
    "services:down": "docker-compose -f docker-compose.dev.yml down",
    "services:logs": "docker-compose -f docker-compose.dev.yml logs -f"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^8.0.1",
    "@fastify/multipart": "^8.3.1",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/sensible": "^5.6.0",
    "@fastify/swagger": "^8.15.0",
    "@fastify/swagger-ui": "^4.2.0",
    "@fastify/websocket": "^10.0.1",
    "@prisma/client": "^5.4.2",
    "@tenderflow/shared": "*",
    "bcrypt": "^5.1.1",
    "bullmq": "^4.12.7",
    "fastify": "^4.29.1",
    "fastify-plugin": "^4.5.1",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "minio": "^7.1.3",
    "nodemailer": "^6.9.7",
    "socket.io": "^4.7.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/jest": "^29.5.5",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/node": "^20.8.4",
    "@types/nodemailer": "^6.4.13",
    "@types/supertest": "^2.0.16",
    "commander": "^11.1.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "nock": "^13.4.0",
    "prisma": "^5.4.2",
    "supertest": "^6.3.3",
    "testcontainers": "^10.5.0",
    "ts-jest": "^29.1.1",
    "tsx": "^3.14.0",
    "typescript": "^5.2.2"
  }
}
