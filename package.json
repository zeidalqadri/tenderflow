{
  "name": "tenderflow",
  "version": "1.0.0",
  "description": "Comprehensive tender management platform with document parsing and automated workflows",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:integration": "turbo run test:integration",
    "test:e2e": "turbo run test:e2e",
    "test:watch": "turbo run test:watch",
    "test:coverage": "jest --coverage --passWithNoTests",
    "test:security": "turbo run test:security",
    "test:performance": "turbo run test:performance",
    "test:db": "turbo run test:db",
    "test:setup": "turbo run test:setup",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:test": "docker-compose -f docker-compose.test.yml up --build --abort-on-container-exit",
    "db:generate": "turbo run db:generate",
    "db:push": "turbo run db:push",
    "db:migrate": "turbo run db:migrate",
    "db:studio": "turbo run db:studio",
    "db:test:setup": "turbo run db:test:setup",
    "db:test:teardown": "turbo run db:test:teardown"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@turbo/gen": "^1.10.12",
    "@types/jest": "^29.5.8",
    "@types/sinon": "^17.0.2",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "jest-junit": "^16.0.0",
    "nock": "^13.4.0",
    "nodemailer-mock": "^2.0.0",
    "prettier": "^3.0.3",
    "sinon": "^17.0.1",
    "supertest": "^6.3.3",
    "testcontainers": "^10.5.0",
    "ts-jest": "^29.1.1",
    "turbo": "^1.10.12",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.56.1"
  }
}
