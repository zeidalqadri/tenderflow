# TenderFlow Environment Configuration

# Application Settings
NODE_ENV=development
PORT=3000
API_PORT=3001
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:3001

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tenderflow
DB_USER=tenderflow
DB_PASSWORD=tenderflow123
DATABASE_URL=postgresql://tenderflow:tenderflow123@localhost:5432/tenderflow

# Redis Configuration (BullMQ & Caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis123
REDIS_URL=redis://:redis123@localhost:6379

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-too
JWT_REFRESH_EXPIRES_IN=30d

# Object Storage (MinIO)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ROOT_USER=tenderflow
MINIO_ROOT_PASSWORD=tenderflow123
MINIO_ACCESS_KEY=tenderflow
MINIO_SECRET_KEY=tenderflow123
MINIO_BUCKET_DOCUMENTS=tender-documents
MINIO_BUCKET_UPLOADS=user-uploads
MINIO_BUCKET_BACKUPS=system-backups

# Email Configuration
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@tenderflow.com
EMAIL_FROM_NAME=TenderFlow

# Production Email (Uncomment for production)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=true
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# File Upload Limits
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,png,jpg,jpeg,gif

# OCR Configuration
TESSERACT_LANG=eng+ara
OCR_CONFIDENCE_THRESHOLD=60

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your-session-secret-key-change-this
SESSION_EXPIRES=24h

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret-key

# Monitoring & Logging
LOG_LEVEL=debug
ENABLE_REQUEST_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true

# Grafana (Optional - for monitoring profile)
GRAFANA_PASSWORD=admin123

# Feature Flags
ENABLE_OCR=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_FILE_COMPRESSION=true
ENABLE_AUDIT_LOGGING=true
ENABLE_REAL_TIME_UPDATES=true

# External API Keys (Add as needed)
# GOOGLE_CLOUD_API_KEY=your-google-cloud-key
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Security Headers
HELMET_ENABLED=true
CSRF_ENABLED=true

# Cache Configuration
CACHE_TTL=300
CACHE_MAX_ITEMS=1000

# Background Jobs Configuration
QUEUE_CONCURRENCY=5
JOB_RETRY_ATTEMPTS=3
JOB_RETRY_DELAY=5000

# Tender Processing
TENDER_AUTO_ASSIGNMENT=true
TENDER_DEADLINE_BUFFER_HOURS=24
TENDER_MAX_PARTICIPANTS=50

# Notification Settings
NOTIFICATION_BATCH_SIZE=100
NOTIFICATION_RETRY_ATTEMPTS=3
NOTIFICATION_DELAY_SECONDS=5